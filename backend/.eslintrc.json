{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    // enable additional rules
    "indent": [
      "error",
      4
    ],
    "max-len": [
      "error",
      120
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    // override default options for rules from base configurations
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-cond-assign": [
      "error",
      "always"
    ],
    // disable rules from base configurations
    "no-console": "off",
    "no-unused-vars": 0
  }
}
